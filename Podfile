  platform :osx, "10.8"
  pod 'AFNetworking', '~> 2.0'
  pod 'Mantle', '~> 1.3'
end

target "Overcoat Mac Tests" do
  platform :osx, "10.8"
  pod 'OCMock', :inhibit_warnings => true
  pod 'OHHTTPStubs'
end
